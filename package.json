{
  "name": "@elrondnetwork/dapp-core",
  "version": "0.3.0",
  "description": "A library to hold the main logic for a dapp on the Elrond Network",
  "author": "ElrondNetwork",
  "license": "GPL-3.0-or-later",
  "repository": "ElrondNetwork/dapp-core",
  "main": "build/index.js",
  "module": "build/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs --css-modules false ",
    "start": "microbundle-crl watch --no-compress --format modern,cjs --css-modules false",
    "prepare": "run-s build",
    "test": "run-s test:unit test:build",
    "test:build": "run-s build",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.5.0",
    "@testing-library/user-event": "7.2.1",
    "@types/jest": "25.1.4",
    "@babel/eslint-parser": "7.16.5",
    "@types/lodash": "4.14.178",
    "@types/node": "14.14.44",
    "@types/platform": "1.3.4",
    "@types/qrcode": "1.4.1",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react": "1.1.7",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "2.4.0",
    "microbundle-crl": "0.13.11",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "react-dom": "17.0.2",
    "react-scripts": "3.4.1",
    "run-script-os": "1.1.5",
    "typescript": "4.1.2"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "@elrondnetwork/dapp-utils": "0.0.16",
    "@elrondnetwork/erdjs": "8.0.1-alpha.19",
    "@reduxjs/toolkit": "1.6.2",
    "bignumber.js": "9.0.2",
    "lodash": "4.17.21",
    "react": "^17.0.2",
    "react-redux": "7.2.6",
    "redux-persist": "6.0.0",
    "reselect": "4.0.0"
  }
}
